@model Sinbin.Web.Models.PictureViewModel

@{
    ViewBag.Title = "Picture";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}

@Styles.Render("~/Content/picture")

<div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
        <section id="registerForm">
            @using (Html.BeginForm("Picture", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group image-upload">
                    <label for="file-input">
                        <span id="file-image" style="background-image:url('@Model.ProfilePictureUrl')"></span>
                    </label>
                    @Html.TextBoxFor(m => m.ProfilePicture, new { type = "file", id = "file-input", accept = "image/*", capture = "camera" })
                </div>
                <div class="form-group">
                    <div class="btn-container">
                        <input type="submit" class="btn btn-green" value="Save" />
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-xs-1"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/photo")
}




